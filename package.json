{
  "name": "jcl-cms",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "setup:2fa": "node scripts/setup-2fa.js",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@payload-auth/better-auth-plugin": "^1.1.8",
    "@payloadcms/db-postgres": "^3.49.1",
    "@payloadcms/email-nodemailer": "^3.49.1",
    "@payloadcms/next": "^3.49.1",
    "@payloadcms/payload-cloud": "^3.49.1",
    "@payloadcms/plugin-import-export": "^3.49.1",
    "@payloadcms/richtext-lexical": "^3.49.1",
    "@payloadcms/ui": "^3.49.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^6.4.17",
    "better-auth": "^1.3.7",
    "cross-env": "^10.0.0",
    "crypto-js": "^4.2.0",
    "dotenv": "17.2.1",
    "graphql": "^16.11.0",
    "jsonwebtoken": "^9.0.2",
    "next": "15.4.5",
    "node-cron": "^4.2.1",
    "node-forge": "^1.3.1",
    "nodemailer": "^7.0.5",
    "payload": "3.49.1",
    "payload-auth": "^1.6.4",
    "react": "19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "0.34.3",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@playwright/test": "1.54.1",
    "@testing-library/react": "16.3.0",
    "@types/node": "^24.1.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-forge": "^1.3.13",
    "@types/react": "19.1.9",
    "@types/react-dom": "19.1.7",
    "@vitejs/plugin-react": "4.7.0",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.4.5",
    "jsdom": "26.1.0",
    "playwright": "1.54.1",
    "playwright-core": "1.54.1",
    "prettier": "^3.6.2",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
